<div class="col-xl-3 col-lg-4 col-md-6 mb-4">
    <div class="product-card position-relative h-100">
        <!-- Status Ribbon -->
        <% if (product.status !== 'active') { %>
        <span class="ribbon bg-secondary">Inactive</span>
        <% } %>

        <% if (product.isDeleted) { %>
        <span class="ribbon bg-danger">Deleted</span>
        <% } %>

        <div class="image-wrapper position-relative">

            <div id="productCarousel-<%= product._id %>" class="carousel slide" data-bs-ride="carousel">

                <!-- Indicators -->
                <% if (product.images && product.images.length > 1) { %>
                <div class="carousel-indicators">
                    <% (product.images || []).forEach((img, i) => { %>
                    <button type="button" data-bs-target="#productCarousel-<%= product._id %>"
                        data-bs-slide-to="<%= i %>" class="<%= i === 0 ? 'active' : '' %>">
                    </button>
                    <% }) %>
                </div>
                <% } %>

                <!-- Slides -->
                <div class="carousel-inner">
                    <% (product.images || []).forEach((image, i) => { %>
                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                        <img src="<%= image.url || "" %>" class="d-block w-100" style="height:320px; object-fit:cover;">
                    </div>
                    <% }) %>
                </div>

                <!-- Controls -->
                <% if (product.images && product.images.length > 1) { %>
                <button class="carousel-control-prev" data-bs-target="#productCarousel-<%= product._id %>"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>

                <button class="carousel-control-next" data-bs-target="#productCarousel-<%= product._id %>"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
                <% } %>

            </div>

            <span class="price-badge">â‚¹ <%= product.price %></span>

        </div>


        <!-- Card Body -->
        <div class="card-body p-3 d-flex flex-column">

            <!-- Title -->
            <h6 class="fw-bold mb-1 text-truncate">
                <%= product.name %>
            </h6>

            <!-- Brand + Category -->
            <div class="small text-muted mb-2">
                <span class="me-3">
                    <i class="bi bi-tag-fill me-1"></i>
                    <%= product.brand %>
                </span>

                <span>
                    <i class="bi bi-box-seam me-1"></i>
                    <%= product.category %>
                </span>
            </div>


            <!-- Description -->
            <p class="small mb-2 line-clamp-2 <%= product.desc ? 'text-muted' : 'text-secondary fst-italic' %>">
                <%= product.desc || 'No description' %>
            </p>

            <!-- Attributes -->
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="badge bg-light text-dark">
                    Size: <%= product.size %>
                </span>

                <span class="badge bg-light text-dark">
                    <i class="bi bi-palette2"></i>
                    <%= product.color %>
                </span>
            </div>

            <!-- Stock -->
            <div class="mb-3">
                <% if (product.stock === 0) { %>
                <span class="badge bg-danger">Out of stock</span>
                <% } else if (product.stock < 5) { %>
                <span class="badge bg-warning text-dark">Low stock: <%= product.stock %></span>
                <% } else { %>
                <span class="badge bg-success">In stock: <%= product.stock %></span>
                <% } %>
            </div>

            <!-- Actions -->
            <div class="mt-auto d-flex gap-1">
                <a href="/web/product/edit/<%= product._id %>" class="btn btn-sm btn-outline-dark w-100">
                    Edit
                </a>

                <% if (!product.isDeleted) { %>
                <form action="/web/product/delete/<%= product._id %>" method="POST" class="w-100">
                    <button class="btn btn-sm btn-dark w-100">
                        Delete
                    </button>
                </form>
                <% } %>
            </div>

        </div>
    </div>
    <style>
        /* Card Container */
        .product-card {
            background: #fff;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
        }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

        /* Image */
        .image-wrapper {
            position: relative;
            height: 220px;
            overflow: hidden;
        }

        .image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.4s ease;
        }

        .product-card:hover img {
            transform: scale(1.08);
        }

        /* Price Badge */
        .price-badge {
            position: absolute;
            bottom: 12px;
            right: 12px;
            background: linear-gradient(135deg, #808080, #212a2e);
            color: white;
            padding: 6px 12px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.85rem;
        }

        /* Ribbon */
        .ribbon {
            position: absolute;
            top: 12px;
            left: -32px;
            transform: rotate(-45deg);
            color: white;
            padding: 4px 40px;
            font-size: 0.75rem;
            font-weight: 600;
            z-index: 2;
        }

        /* Description clamp */
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }


        .image-wrapper {
            position: relative;
            height: 220px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #fff;
        }

        .image-wrapper img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        .image-wrapper img {
            background-image: url("/images/shirt.png");
            background-size: cover;
        }
    </style>
</div>