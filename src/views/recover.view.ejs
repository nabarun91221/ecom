<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Products</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

</head>

<body class="bg-light min-vh-100 d-flex flex-column">
  <%- include('layouts/nav.ejs') %>

  <div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3 class="mb-0">Product List</h3>
    </div>

    <div class="card shadow-sm">
      <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0">
          <thead class="table-dark">
            <tr>
              <th>No.</th>
              <th>Id</th>
              <th>Name</th>
              <th>Price</th>
              <th>Size</th>
              <th>Category</th>
              <th>Brand</th>
              <th>Color</th>
              <th>Status</th>
              <th>Created At</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% if (products.length === 0) { %>
            <tr>
              <td colspan="7" class="text-center text-muted py-3">
                No products found
              </td>
            </tr>
            <% } %>

            <% products.forEach((product, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= product._id.toString().slice(-3) %></td>

              <td><%= product.name %></td>
              <td>â‚¹ <%= product.price %></td>
              <td><%= product.size || "-" %></td>
              <td><%= product.category || "-" %></td>
              <td><%= product.brand || "-" %></td>
              <td><%= product.color || "-" %></td>
              <td>
                <span class="badge <%= product.status ? 'bg-success' : 'bg-danger' %>">
                  <%= product.active ? "Active" : "Inactive" %>
                </span>
              </td>
              <td>
                <%= product.createdAt.toLocaleDateString("en-IN") %>
              </td>
              <td>
                <div class="d-flex justify-content-evenly align-items-center">
                  <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#recoverProductModal"
                    data-id="<%= product._id %>" data-name="<%= product.name %>">
                    <i class="bi bi-recycle"></i>
                    recover
                  </button>

                  <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteProductModal"
                    data-id="<%= product._id %>" data-name="<%= product.name %>">
                    <i class="bi bi-exclamation-triangle"></i>
                    Delete
                  </button>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
  <div class="modal fade" id="deleteProductModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">

        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title">Confirm Delete</h5>
          <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <p>
            Are you sure you want to delete
            <strong id="delete-product-name"></strong>?
          </p>
          <input type="hidden" id="delete-product-id" />
          <p class="text-muted mb-0">This action cannot be undone.</p>
        </div>

        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
        </div>

      </div>
    </div>
  </div>
  <div class="modal fade" id="recoverProductModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">

        <div class="modal-header bg-success text-white">
          <h5 class="modal-title">Confirm recover</h5>
          <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <p>
            Are you sure you want to recover
            <strong id="recover-product-name"></strong>?
          </p>
          <input type="hidden" id="recover-product-id" />
          <p class="text-muted mb-0">The product will be restored and deployed</p>
        </div>

        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button class="btn btn-success" id="confirmRecoverBtn">Recover</button>
        </div>

      </div>
    </div>
  </div>
  <!-- SUCCESS TOAST -->
  <% if (success && success.length > 0) { %>
  <div class="toast-container position-fixed top-0 end-0 p-3">
    <div class="toast show align-items-center text-white bg-success border-0">
      <div class="d-flex">
        <div class="toast-body">
          <%= success[0] %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto"></button>
      </div>
    </div>
  </div>
  <% } %>
  <!-- ERROR TOAST -->
  <% if (error && error.length > 0) { %>
  <div class="toast-container position-fixed top-0 end-0 p-3">
    <div class="toast show align-items-center text-white bg-danger border-0">
      <div class="d-flex">
        <div class="toast-body">
          <%= error[0] %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto"></button>
      </div>
    </div>
  </div>
  <% } %>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    setTimeout(() => {
      document.querySelectorAll(".toast").forEach(toast => toast.remove());
    }, 3000);
    const modal_delete = document.getElementById("deleteProductModal");

    // IMPORTANT: do NOT create instance globally for hiding later
    modal_delete.addEventListener("show.bs.modal", (event) => {
      const btn = event.relatedTarget;
      document.getElementById("delete-product-name").innerText =
        `${btn.dataset.name} (${String(btn.dataset.id).slice(-5)})`;
      document.getElementById("delete-product-id").value = btn.dataset.id;
    });

    document
      .getElementById("confirmDeleteBtn")
      .addEventListener("click", async () => {

        const id = document.getElementById("delete-product-id").value;

        await fetch(`/web/products/delete/${id}`, {
          method: "DELETE",
        });

        // ðŸ”¥ GET THE EXISTING INSTANCE AND HIDE
        const modalInstance = bootstrap.Modal.getInstance(modal_delete);
        if (modalInstance)
        {
          modalInstance.hide();
        }

        // optional: refresh after close animation
        window.location.reload();
      });

    const recover_modal = document.getElementById("recoverProductModal");
    recover_modal.addEventListener("show.bs.modal", (event) => {
      const btn = event.relatedTarget;
      document.getElementById("recover-product-name").innerText =
        `${btn.dataset.name} (${String(btn.dataset.id).slice(-5)})`;
      document.getElementById("recover-product-id").value = btn.dataset.id;
    });
    document
      .getElementById("confirmRecoverBtn")
      .addEventListener("click", async () => {

        const id = document.getElementById("recover-product-id").value;

        await fetch(`/web/products/recover/${id}`, {
          method: "POST",
        });

        const modalInstance = bootstrap.Modal.getInstance(recover_modal);
        if (modalInstance)
        {
          modalInstance.hide();
        }
        window.location.reload();
      });
  </script>


</body>
<%- include("layouts/footer.ejs") %>

</html>